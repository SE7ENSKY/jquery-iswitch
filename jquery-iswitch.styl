.iswitch
	&__container
		width 100px
		height 50px
		padding 2px
		border-radius 1000px
		transition background-color .2s linear
		&_on
			background gray
		&_off
			background black
	&__handle
		width 46px
		height 46px
		border-radius 100%
		transition margin-left .2s linear
		&_on
			background red
			margin-left 50px
		&_off
			background white
		&_manual
			transition-duration .02s
			background #eee
